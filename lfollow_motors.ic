// lfollow_motors.ic

void forward() {
	fdL();
	fdR();
}
void backward() {
	bkL();
	bkR();
}
void left() {
	fdR();
	bkL();
}
void right() {
	fdL();
	bkR();
}
void fdR() {
	motor(MOTOR_R,MOTOR_R_SPEED);
}
void fdL() {
	motor(MOTOR_L,MOTOR_L_SPEED);
}
void bkL() {
	motor(MOTOR_L,-1*MOTOR_L_SPEED);
}
void bkR() {
	motor(MOTOR_R,-1*MOTOR_R_SPEED);
}
void stop() {
	off(MOTOR_L);
	off(MOTOR_R);
}
